{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "compilerOptions": {
        "paths": {
            "@logic/*": [
                "./src/logic/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
        },
        "moduleResolution": "node",
        "baseUrl": "./",
        "module": "ES6",
    }
}