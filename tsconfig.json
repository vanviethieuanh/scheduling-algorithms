{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
    "compilerOptions": {
        "paths": {
            "@logic/*": [
                "./src/logic/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@store": [
                "./src/store.js"
            ]
        },
        "moduleResolution": "node",
        "baseUrl": "./",
        "module": "ES6",
    }
}